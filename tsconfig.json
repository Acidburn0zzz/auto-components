{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "noUnusedLocals": true
  },
  "include": ["src"]
}
